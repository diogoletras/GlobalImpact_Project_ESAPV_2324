@model GlobalImpact.ViewModels.NewFolder.CreateRecyclingBinViewModel

@{
	ViewData["Title"] = "CreateRecyclingBin";
}

<div class="text-center">
	<h1 class="display-4">CreateRecyclingBin</h1>


	<div class="row-center">
		<hr />
		<div class="col-md-6">
			<form asp-action="CreateRecyclingBin">
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>
				<div class="form-group">
					<div class="form-group">
						<div class="row mb-4 align-items-center">
							<label asp-for="Type" class="col-md-2 text-light"></label>
							<div class="col-md-10">
								<select asp-for="Type" asp-items="@Model.RBTList" class="form-control">
									<option disabled selected>--Select Role--</option>
								</select>
							</div>
						</div>
					</div>
					<span asp-validation-for="Type" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="Description" class="control-label"></label>
					<input asp-for="Description" class="form-control" />
					<span asp-validation-for="Description" class="text-danger"></span>
				</div>
				<div class="form-group-register">
					<div class="form-group-register-plus">
						<label asp-for="Latitude" class="control-label"></label>
						<input asp-for="Latitude" class="form-control" />
						<span asp-validation-for="Latitude" class="text-danger"></span>
					</div>
					<div class="form-group-register-plus">
						<label asp-for="Longitude" class="control-label"></label>
						<input asp-for="Longitude" class="form-control" />
						<span asp-validation-for="Longitude" class="text-danger"></span>
					</div>
				</div>
				<div class="form-group-register">
					<div class="form-group-register-plus">
						<label asp-for="Capacity" class="control-label"></label>
						<input asp-for="Capacity" class="form-control" />
						<span asp-validation-for="Capacity" class="text-danger"></span>
					</div>
					<div class="form-group-register-plus">
						<label asp-for="CurrentCapacity" class="control-label"></label>
						<input asp-for="CurrentCapacity" class="form-control" />
						<span asp-validation-for="CurrentCapacity" class="text-danger"></span>
					</div>
				</div>
				<div class="form-group form-check">
					<label class="form-check-label">
						<input class="form-check-input" asp-for="Status" /> @Html.DisplayNameFor(model => model.Status)
					</label>
				</div>
				<div class="form-group">
					<input type="submit" value="Create" class="btn-grad" />
				</div>
			</form>
		</div>
		<hr />
	</div>
	<hr />

	<div>
		<a asp-action="Index" class="btn-grad-small">Back to List</a>
	</div>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
