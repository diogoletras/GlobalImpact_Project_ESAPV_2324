@model GlobalImpact.ViewModels.RecyclingBin.EcoLogViewModel
@{
	ViewData["Title"] = "Login Ecoponto";
}

<div class="text-center">
	<h2 class="display-4">EcoLog</h2>

	<h5>Ecoponto Desligado</h5>

	<div class="container">
		<div class="row justify-content-center mt-5">
			<div class="col-md-6">
				<h2 class="display-4">Insira o ID do Ecoponto</h2>
				<form method="get" asp-action="EcoLogin">
					<div class="form-group">
						<input asp-for="IdInput" class="form-control" />
						<span asp-validation-for="IdInput" class="text-danger"></span>
					</div>
					<div class="text-center">
						<button type="submit" class="btn-grad">Submeter</button>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>