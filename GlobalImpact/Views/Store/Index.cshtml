@model IEnumerable<GlobalImpact.Models.Product>


@{
    ViewData["Title"] = "Index";
}
@if (User.Identity.IsAuthenticated)
{
    @if (User.IsInRole("client") || User.IsInRole("admin"))
    {

        <h1>Index</h1>

        <form method="post" asp-controller="Store" asp-action="Filtra">
            <div class="form-group">
                <input type="text" class="form-control" id="nome" name="nome" placeholder="Nome do Produto">
            </div>
            <div class="form-group">
                <input type="number" step="0.001" class="form-control" id="maxp" name="maxp" placeholder="Preço Maximo">
            </div>
            <div class="form-group">
                <input type="number" step="0.001" class="form-control" id="minp" name="minp" placeholder="Preço Minimo">
            </div>
            <div class="form-group">
                <select class="form-control" id="categoria" name="categoria" asp-items="@ViewBag.Categorias"></select>
            </div>
            <div class="text-center">
                <button type="submit" class="btn-grad">Filtrar</button>
            </div>
        </form>

        <form method="post" asp-controller="Store" asp-action="Order">
            <div class="form-group">
                <select class="form-control" id="orderList" name="orderList" asp-items="@ViewBag.Order"></select>
            </div>
            <div class="text-center">
                <button type="submit" class="btn-grad">Ordenar</button>
            </div>
        </form>

        <div class="row">
            <div class="col-3 text-white">
                <nav id="sidebar" style="min-width: 250px; max-width: 250px; height: 100%; min-height: 1080px">
                    @if (ViewBag.Items != null)
                    {
                        
                        <div class="sidebar-header">
                            <h3>Products</h3>
                        </div>
                        <ul class="list-unstyled components">
                            <li class="product-container d-flex flex-column">
                                <div class="product-item align-items-center">
                                    @foreach (var item in ViewBag.Items)
                                    {
                                        <div class="row">
                                            <div class="col-4" style="padding-right:0!important"><h6>@item.Name</h6></div>
                                            <div class="col-3" style="padding-right:0!important; padding-left:0!important">
                                                <p>@item.Price €</p>
                                            </div>
                                            <div class="col-3" style="padding-right:0!important; padding-left:0!important">
                                                <input type="number" value="@item.Quantity" min="1" class="rounded-3 w-100">
                                            </div>
                                            <div class="col-1">
                                                <button class="btn btn-danger btn-sm remove-btn">X</button>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </li>
                        </ul>
                        <div class="button-container d-flex justify-content-center">
                            <button class="btn btn-primary btn-lg">Checkout</button>
                            <button class="btn btn-danger btn-lg">Clear Cart</button>
                        </div>
                    }
                </nav>
            </div>
            <div class="col-9">
                <div class="container">
                    <div class="row">
                        @foreach (var item in Model)
                        {
                            <div class="col-md-3">
                                <div class="card" style="min-height:550px">
                                    <img src="/img/products/@item.ImageUrl" class="card-img-top" alt="Product" style="max-width: 500px; max-height: 250px;">
                                    <div class="card-body">
                                        <h5 class="card-title">@Html.DisplayFor(modelItem => item.Name)</h5>
                                        <p class="card-text">@Html.DisplayNameFor(model => model.Description) - @Html.DisplayFor(modelItem => item.Description)</p>
                                        <p class="card-text">@Html.DisplayNameFor(model => model.Price) - @Html.DisplayFor(modelItem => item.Price) €</p>
                                        <p class="card-text">@Html.DisplayNameFor(model => model.Tax) - @Html.DisplayFor(modelItem => item.Tax) %</p>
                                        <p class="card-text">@Html.DisplayNameFor(model => model.Category.Category) - @Html.DisplayFor(modelItem => item.Category.Category)</p>
                                        <a class="btn btn-primary" asp-action="Add" asp-route-id="@item.Id">Buy Now</a>
                                        <a class="btn btn-secondary" asp-action="Details" asp-controller="Products" asp-route-id="@item.Id">Details</a>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
}