@using GlobalImpact.ViewModels.Account
@model ExternalLoginViewModel

<div class="external-login">
	<h1 class="display-4">Associate your @ViewData["ProviderDisplayName"] account.</h1>
	<div class="form-register">
		<form asp-controller="Account" asp-action="ExternalLoginConfirmation" method="post" role="form" asp-route-returnurl="@ViewData["ReturnUrl"]">
			<hr />
			<p>
				You've successfully authenticated with <strong>@ViewData["ProviderDisplayName"]</strong>.
				Please enter a user name for this site below and click the Register button to finish
				logging in.
			</p>
			<input type="hidden" asp-for="Email" />

			<div class="form-group-register-solo">
				<input asp-for="Name" class="form-control-register-solo" placeholder="Name" />
				<span asp-validation-for="Name" class="text-danger"></span>
			</div>

			<div class="form-group-register">
				<div class="form-group-register-plus">
					<input asp-for="FirstName" class="form-control-register" placeholder="First Name" />
					<span asp-validation-for="FirstName" class="text-danger"></span>
				</div>
				<div class="form-group-register-plus">
					<input asp-for="LastName" class="form-control-register" placeholder="Last Name" />
					<span asp-validation-for="LastName" class="text-danger"></span>
				</div>
			</div>

			<div class="form-group-register">
				<div class="form-group-register-plus">
					<input asp-for="Age" class="form-control-register" placeholder="Age" />
					<span asp-validation-for="Age" class="text-danger"></span>
				</div>
				<div class="form-group-register-plus">
					<input asp-for="NIF" class="form-control-register" placeholder="NIF" />
					<span asp-validation-for="NIF" class="text-danger"></span>
				</div>
			</div>
			<div class="form-submit">
				<button type="submit" class="btn-grad">Register</button>
			</div>
			<hr />
		</form>
	</div>
</div>


@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}