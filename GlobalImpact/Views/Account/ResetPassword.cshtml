@using GlobalImpact.ViewModels.Account
@model ResetPasswordViewModel

<div class="reset-password">
    <form asp-controller="Account" asp-action="ResetPassword" method="post" role="form">
        <div asp-validation-summary="All" class="text-danger" />
        <input asp-for="Code" hidden />

        <div class="form-reset-password">
                <input asp-for="Email" class="form-control" placeholder="Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-reset-password">
                <input asp-for="Password" class="form-control" type="password" placeholder="Password" />
                <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="form-reset-password">
                <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Confirm Password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>

        <div class="form-submit">
            <button type="submit" class="btn-grad">Submit</button>
        </div>
    </form>
</div>
